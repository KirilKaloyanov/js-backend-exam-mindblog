<div class="details-container">
  <div class="details-container-image">
    <img src="{{item.imageUrl}}" />
  </div>
  <div class="details-container-info">
    <h2>{{item.name}}</h2>
    <h3>{{item.category}}</h3>
    <h3>By: {{owner.email}}</h3>
    <!--If there are followers-->
    <h4>Follow By: jace.m, sandra.p/...some usernames</h4>
    <!--If there are no followers-->
    <h4>There are no followers yet!</h4>
  </div>
  <div class="details-container-content">
    <p>{{item.description}}</p>
  </div>

  {{#if user}}
    <div class="btn-container">
      <!-- Only for registered user and creator of the blog post-->
      {{#if user.isOwner}}
        <a href="/catalog/edit/{{item._id}}">Edit</a>
        <a href="/catalog/delete/{{item._id}}">Delete</a>
        <!-- logged in user who has not yet followed the blog-->
      {{else}}
        {{#if user.subscribed}}
          <!-- logged in user who has already followed the blog-->
          <p class="follow-pub">You already follow this blog!</p>
        {{else}}
          <a href="/catalog/subscribe/{{item._id}}">Follow</a>
        {{/if}}
      {{/if}}
    </div>
  {{/if}}

</div>

