<section id="create-container">
  <div class="create-container-info">
    <h1>Create Blog</h1>
    <form action="/catalog/create" method="post">
      <label>Title:</label>
      <input name="name" type="text" id="title" value="{{body.name}}" />

      <label>Image:</label>
      <input
        name="imageUrl"
        type="text"
        id="image"
        placeholder="http://..."
        value="{{body.imageUrl}}"
      />

      <label>Content:</label>
      <textarea id="content" name="description">{{body.description}}</textarea>

      <label>Blog Category:</label>
      <input
        name="category"
        type="text"
        id="category"
        value="{{body.category}}"
      />

      <input type="submit" id="btn" value="POST" />
    </form>
  </div>
</section>