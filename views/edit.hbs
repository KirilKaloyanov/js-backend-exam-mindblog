<section id="edit-container">
  <div class="edit-container-info">
    <h1>Edit Blog</h1>
    <form action="/catalog/edit/{{item._id}}" method="post">
      <label>Title:</label>
      <input name="name" type="text" id="name" value="{{item.name}}" />

      <label>Image:</label>
      <input name="imageUrl" type="text" id="image" value="{{item.imageUrl}}" />

      <label>Content:</label>
      <textarea id="content" name="description">{{item.description}}</textarea>

      <label>Blog Category:</label>
      <input
        name="category"
        type="text"
        id="catelory"
        value="{{item.category}}"
      />

      <input type="submit" id="btn" value="EDIT" />
    </form>
  </div>
</section>